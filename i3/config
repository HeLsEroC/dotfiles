bar {
  status_command CONTRIB_SCRIPT_DIR=$HOME/.config/i3blocks/scripts DEFAULT_SCRIPT_DIR=/usr/share/i3blocks i3blocks -c ~/.config/i3blocks/config
  position bottom
  font pango: hack 8
  colors {
    separator #dc322f
    background $background
    statusline #85CEBC
    #                   #border     #background     #textcolor
    focused_workspace   $focused    $focused        #fdf6e3
    active_workspace    $active     $active         #fdf6e3
    inactive_workspace  $inactive   $inactive       #002b36
    urgent_workspace    $urgent     $urgent         #fdf6e3
  }
  # strips the workspace number 
  strip_workspace_numbers yes
}
